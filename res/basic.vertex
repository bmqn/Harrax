#version 330 core

layout (location = 0) in vec3 a_Position;
layout (location = 1) in vec3 a_Normal;
layout (location = 2) in vec4 a_Colour;

out vec3 v_Position;
out vec3 v_Normal;
out vec4 v_Colour;

uniform mat4 u_ViewProj;

void main()
{
	v_Normal = a_Normal;
	v_Colour = a_Colour;

	gl_Position = u_ViewProj * vec4(a_Position, 1.0);
}